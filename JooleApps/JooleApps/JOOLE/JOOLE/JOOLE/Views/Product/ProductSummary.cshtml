@model dynamic

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="site-block-wrap">
    <div class="owl-carousel with-dots">
        <div class="site-blocks-cover overlay overlay-2" style="background-image: url(../../Design/products/images/background.jpg);" data-aos="fade" id="home-section">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-6 mt-lg-5 text-center">
                        <h1 class="text-shadow">Buy & Sell Products Here</h1>
                        <br />
                        <br />
                        <br />
                        <p><a href="#" target="_blank" class="btn btn-primary px-5 py-3">Let's Search</a></p>

                    </div>
                </div>
            </div>


        </div>

        <div class="site-blocks-cover overlay overlay-2" style="background-image: url(../../Design/products/images/background3.png);" data-aos="fade" id="home-section">


            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-6 mt-lg-5 text-center">
                        <h1 class="text-shadow">Check All Products Here</h1>
                        <br />
                        <br />
                        <br />
                        <p><a href="#summary-section" class="btn btn-primary px-5 py-3">Overview</a></p>

                    </div>
                </div>
            </div>


        </div>

    </div>

</div>


<div class="site-section" id="summary-section">
    <div class="container">
        <div class="row large-gutters">



        </div>
    </div>
</div>

<div class="site-section" id="summary-section">
    <div class="container">

        <div class="row">
            <div class="col-md-3 order-1 order-md-2">
                <div class="mb-5">
                    <h1 class="text-black mb-4 h5 font-family-2">Filter</h1>
                    @using (Html.BeginForm("SearchedProducts", "Product"))
                    {

                        <div class="form-group">
                            <div class="select-wrap">
                                <span class="icon icon-keyboard_arrow_down"></span>
                                <select class="form-control px-3">
                                    <option value="">By Action</option>
                                    <option value="">Products</option>
                                    <option value="">Projects</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="select-wrap">
                                <span class="icon icon-keyboard_arrow_down"></span>
                                <select class="form-control px-3">
                                    <option value="By Action">By Action</option>
                                    @foreach (var item in Model.Subcat)
                                    {
                                        <option value="@item.sub_catname">@item.sub_catname</option>
                                    }
                                </select>

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="select-wrap">
                                <h3 class="alert-dark">Model Year</h3>
                                <div class="form-group col-md-3">
                                    @Html.TextBox("yearFrom", "1980", new { @class = "form-control" })
                                </div>
                                <div class="form-group col-md-3">
                                    @Html.TextBox("yearTo", "2020", new { @class = "form-control" })
                                </div>

                            </div>
                        </div>
                        <br />
                        <br />
                        <br />


                        <div class="mb-5">
                            <h3 class="text-black mb-4 h5 font-family-2">Filter by Price</h3>
                            <div id="slider-range" class="border-primary"></div>
                            @Html.TextBox("text", null, new { @class = "form-control border-0 pl-0 bg-white", id = "amount", disabled = "" })

                        </div>

                        <button class="btn btn-lg btn-primary" type="submit">APPLY</button>
                    }
                </div>
            </div>


            <div class="col-md-9 order-2 order-md-1">

                <div class="row large-gutters">
                    @foreach (var item in Model.Product)
                    {
                        <div class="col-md-6 col-lg-4 mb-5 mb-lg-5 ">
                            <div class="ftco-media-1">
                                <div class="ftco-media-1-inner">
                                    <a href="@Url.Action("Details","Product",new {item.productID})" class="d-inline-block mb-4"><img src="@item.prodimage" alt="FImage" class="img-fluid"></a>
                                    <div class="ftco-media-details">
                                        <h3>@item.prodname</h3>
                                        <h4>@item.model</h4>
                                        <h4>@item.series</h4>
                                        
                                        <input class="checkbox-inline" type="checkbox" value="true" id="@item.productID" name="check" /><h4>Compare</h4>
                                        
                                        <br />
                                        <button class="ui-button">Add to</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }





                </div>

            </div>

        </div>
    </div>
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-5">
                            <h2 class="footer-heading mb-4">About Us</h2>
                        </div>
                        <div class="col-md-3 mx-auto">
                            <h2 class="footer-heading mb-4">Quick Links</h2>
                            <ul class="list-unstyled">
                                <li><a href="#">About Us</a></li>
                                <li><a href="#">Products</a></li>
                                <li><a href="#">Contact Us</a></li>
                            </ul>
                        </div>

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-4">
                        <h2 class="footer-heading mb-4">Subscribe Newsletter</h2>
                        <form action="#" method="post" class="footer-subscribe">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control border-secondary text-white bg-transparent" placeholder="Enter Email" aria-label="Enter Email" aria-describedby="button-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-primary text-black" type="button" id="button-addon2">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="">
                        <h2 class="footer-heading mb-4">Follow Us</h2>
                        <a href="#" class="pl-0 pr-3"><span class="icon-facebook"></span></a>
                        <a href="#" class="pl-3 pr-3"><span class="icon-twitter"></span></a>
                        <a href="#" class="pl-3 pr-3"><span class="icon-instagram"></span></a>
                        <a href="#" class="pl-3 pr-3"><span class="icon-linkedin"></span></a>
                    </div>


                </div>
            </div>
            <div class="row pt-5 mt-5 text-center">
                <div class="col-md-12">
                    <div class="border-top pt-5">
                        <p class="copyright">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
